#include <stdio.h>
#include <string.h>

int main ()
{
    char entry[100];
    char password[100];
    char user_password[100] = "John";

    printf("Hello welcome to scribble :)\n");
    printf("Please enter your password to access the app: "); 
    fgets(password, sizeof(password), stdin);
    password[strlen(password) - 1] = '\0'; // Remove newline character

    while(strcmp(password, user_password) != 0)
    {
        printf("Incorrect password. Please try again: "); 
        fgets(password, sizeof(password), stdin);
        password[strlen(password) - 1] = '\0'; 
    }

    printf("Please, tell me what's on your mind: ");
    fgets(entry, sizeof(entry), stdin);
    printf("%s\n", entry);

    return 0;
}
